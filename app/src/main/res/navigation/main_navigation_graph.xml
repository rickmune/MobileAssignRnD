<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/cityListFragment">

    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.rickmune.mobileassignrnd.view.CityListFragment"
        tools:layout="@layout/fragment_city_list">
        <action
            android:id="@+id/toMapFragment"
            app:destination="@id/mapFragment" >
        </action>

    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.rickmune.mobileassignrnd.view.MapsFragment"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="city"
            app:argType="com.rickmune.mobileassignrnd.domain.City" />
    </fragment>
</navigation>